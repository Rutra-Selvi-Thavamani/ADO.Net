@model IEnumerable<ADO_Entity_DIff_of_Inhert_and_Compo.Models.PersonModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("InsertPerson", "InsertPerson")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessEntityID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailPromotion)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessEntityID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailPromotion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BusinessEntityID }) |
                    @Html.ActionLink("InsertPerson", "InsertPerson", new { id = item.BusinessEntityID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BusinessEntityID })
                </td>
            </tr>
        }
    }

</table>
    